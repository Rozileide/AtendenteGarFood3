<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip">

    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip">

    </LinearLayout>

    <TextView
        android:id="@+id/identificacao_mesa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teste Produto"
        android:textColor="#82552e"
        android:typeface="sans"
        android:textSize="22dip"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_status" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/data_abertura"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/identificacao_mesa"
        android:textColor="#343434"
        android:textSize="15dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="02/12/2016 19h30" />

    <!-- Rightend Duration -->
    <TextView
        android:id="@+id/valor_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="R$ 5,45"
        android:layout_marginRight="5dip"
        android:textSize="20dip"
        android:textColor="#2d5931"
        android:textStyle="bold"
        android:layout_alignTop="@+id/data_abertura"
        android:layout_alignEnd="@+id/data_abertura" />

    <!-- Rightend Arrow -->
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/imageView" />

    <ImageView
        android:id="@+id/image_status"
        android:layout_width="50dip"
        android:layout_height="30dip"
        android:src="@drawable/livre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/imageView"></TableRow>

</RelativeLayout>